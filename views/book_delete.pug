extends layout

block content

  h1 #{title}: #{book.name}

  if book_instance.length

    p #[strong Delete the following books instance before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each book in book_instance
          dt
            a(href=book.url) #{book.imprint}
          dd #{book.id}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#authorid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
